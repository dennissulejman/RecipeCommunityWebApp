@model IEnumerable<RecipeCommunityRESTApi.Db.RecipeCommunity.Models.Recipe>

@{
    ViewData["Title"] = "Recipe Search";
}

@if (Model.Count() > 0)
{
    <h4>Search results for "@ViewData[Constants.RecipesSearchInput]":</h4>
    @foreach (var recipe in Model)
    {
    <p>@Html.DisplayFor(modelItem => recipe.Name)</p>
    }
}
else
{
    <h4>Could not find any recipes when searching for: "@ViewData[Constants.RecipesSearchInput]"</h4>
}