@model RecipeCommunityRESTApi.Db.RecipeCommunity.Models.Recipe

@{
    ViewData["Title"] = $"Editing {Model.Name}";
}

<form action="/Recipes/Edit/@Model.Id" method="post">
    <div class="form-vertical">
        <input type="hidden" asp-for="UserId" />
        <div class="form-group">
            <label class="control-label col-1-3" for="Name" />
            <div class="col-1-3">
                <input asp-for="Name" class="form-control"/>
                <span class="text-danger field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true" />
            </div>
        </div>
        <div class="form-group" col-md-offset-2 col-md-10>
            <label asp-for="@Model.Cuisine" class="control-label"></label>
            <select asp-for="CuisineId" class="form-control" asp-items="ViewBag.Cuisines">
                <option value="">-- Select Cuisine --</option>
            </select>
            <span asp-validation-for="CuisineId" class="text-danger" />
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>