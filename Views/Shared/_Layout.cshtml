<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recipe Community</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-nav navbar-left">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Recipe Community</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <form class="form-inline my-2 my-lg-0" asp-controller="Recipes" asp-action="RecipeSearch">
                        <input class="form-control mr-sm-2" id="RecipeSearch" name="RecipeSearchInput" placeholder="Search For Recipes" />
                    </form>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Recipes" asp-action="RecipeBrowser">Browse Recipes</a>
                </div>
                <div class="navbar-nav navbar-right">
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" id="test" placeholder="Username" />
                        <input type="password" class="form-control mr-sm-2" id="test" placeholder="Password" />
                        <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Sign In</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Recipe Community - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
